{
  "extends": "airbnb-base",
  "rules": {
    "arrow-body-style": [2, "always"],
    "max-len": [2, 125, 2, {"ignoreComments": true}],
    "no-underscore-dangle": [2, { "allowAfterThis": true }],
    "no-unused-vars": [2, { "argsIgnorePattern": "^_" }],
    "no-use-before-define": [2, "nofunc"],
    "no-shadow": [2, { "allow": ["callback"] }],
    "consistent-return": 0
  }
}